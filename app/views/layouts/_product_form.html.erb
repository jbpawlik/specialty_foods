<%= render "layouts/errors", :object => @product %>

<%= form_for [@product] do |f| %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :name %>
  <br>
  <%= f.number_field :cost, class: "form-control" %>
  <%= f.label :cost %>
  <br>
  <%= f.text_field :country_of_origin, class: "form-control" %>
  <%= f.label :country_of_origin %>
<% end %>

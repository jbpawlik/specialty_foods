<body id="productShow">
  <div class="container backbox">
    <div class="row">
      <div class="col-4">
        <%= image_tag("#{Faker::LoremFlickr.image(search_terms: ["#{@product.name}"])}", width: "100px", class: "productPic") %>
      </div>
      <div class="col-6">
        <h1><%= @product.name %></h1>
        <br>
        <h3><%= number_to_currency(@product.cost)  %></h3>
        <br>
        <h3><%= @product.country_of_origin %>
    </div>
    <% if @product.reviews.any? %>
      <h4>Product Reviews:</h4>
      <% @product.reviews.each do |review| %>
        <ul>
          <li>
            <%= review.rating %>/5&nbsp;&nbsp;<%= link_to review.author, product_review_path(@product, review) %>
          </li>
        </ul>
      <% end %>
    <% else %>
      <p>No reviews are listed for this product.</p>
    <% end %>
    </div>
    <div class="row">
      <div class="col-4">
        <p><%= link_to "Add Review", new_product_review_path(@product) %></p>
          </div>
      <div class="col-4">
        <p><%= link_to "Edit Review", edit_product_path(@product) %></p>
      </div>
      <div class="col-4">
    <p><%= link_to "Delete", product_path(@product), :data => {:confirm => "You sure?", :method => "delete"} %></p>
      </div>
      <p><%= link_to "Return to products", products_path %></p>
    </div>
  </div>
  </div>
</body>







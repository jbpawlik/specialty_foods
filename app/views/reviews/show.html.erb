<body id="reviewShow">
  <div class="container backbox">
    <div class="row">
      <div class="col-5">
        <%= image_tag("#{Faker::LoremFlickr.image(search_terms: ["#{@product.name}"])}", width: "100px", class: "productPic") %>
      </div>
      <div class="col-7" id="reviewText">
        <h1><%= @product.name %> - <%= @product.country_of_origin %></h1>
        <h3>
          <br>
          <%= @review.rating %> out of 5
          <br>
          <br>
          <br>
          "<%= @review.content_body.titleize %>."<br><span id="authorCredit">- <%= @review.author %></span>
        </h3>
      </div>
    </div>
    <div class="row">
      <div class="col-4">
        <% if current_user.admin %>
          <p><%= link_to "Edit review", edit_product_review_path(@product, @review) %></p>
        <% end %>
      </div>
      <div class="col-4">
        <% if current_user.admin %>
          <p><%= link_to "Delete review", product_review_path(@product, @review), :data => {:confirm => "Are you sure?", :method => "delete"} %></p>
        <% end %>
      </div>
      <div class="col-4">
        <%= link_to "Return to products", product_path(@product) %>
      </div>
    </div>
  </div>
  <%= render "layouts/userbar" %>
</body>
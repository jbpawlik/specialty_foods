<body id="newReviewPage">
  <div class="container backbox">
    <div class="row">
      <div class="col">
        <%= image_tag("#{Faker::LoremFlickr.image(search_terms: ["#{@product.name}"])}", class: "reviewPic") %>
      </div>
      <div class="col">
        <h1><%= @product.name %></h1>
        <br>
        <%= @product.country_of_origin %>
        <br>
        <%= render "layouts/review_form", :object => @review %>
      </div>
    </div>
    <span class="linkBack"><%= link_to "Return to Review", product_review_path(@product, @review) %></span>
  </div>
  <div class="row" id="userBar">
    <div class="col">
      <% if current_user %>
        <%= current_user.email %> | <%= link_to "Sign out", '/signout' %>
      <% else %>
        <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
      <% end %>
    </div>
    <div class="col">
      <% if current_user %>
        <% if current_user.admin %>
          <%= link_to "Administrators", 'admin' %>
        <% end %>
      <% end %>
    </div>
  </div>
</body>

